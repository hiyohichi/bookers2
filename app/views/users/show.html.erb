<h1>Users#show</h1>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%=render 'books/list',book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(80,80) %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <%end%>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
